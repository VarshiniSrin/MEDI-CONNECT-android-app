<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            tools:context=".DiseasePrediction">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Enter_Symptoms"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="22dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:textColor="#000000"
                    android:text="@string/Symptom_1" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:entries="@array/array_values"
                    android:layout_below="@+id/textView1"/>

                <ImageButton
                    android:id="@+id/image1"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_add"
                    android:layout_below="@+id/textView1"
                    android:layout_alignRight="@+id/spinner1"
                    android:layout_alignEnd="@+id/spinner1" />


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/spinner1"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:text="@string/Symptom_2" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    android:entries="@array/array_values" />

                <ImageButton
                    android:id="@+id/image2"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_add"
                    android:visibility="gone"
                    android:layout_below="@+id/textView2"
                    android:layout_alignRight="@+id/spinner2"
                    android:layout_alignEnd="@+id/spinner2" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner2"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:text="@string/Symptom_3"/>

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:entries="@array/array_values" />

                <ImageButton
                    android:id="@+id/image3"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_add"
                    android:visibility="gone"
                    android:layout_below="@+id/textView3"
                    android:layout_alignRight="@+id/spinner3"
                    android:layout_alignEnd="@+id/spinner3" />


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner3"
                    android:layout_marginTop="15dp"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:text="@string/Symptom_4"/>

                <Spinner
                    android:id="@+id/spinner4"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/textView4"
                    android:visibility="gone"
                    android:entries="@array/array_values" />

                <ImageButton
                    android:id="@+id/image4"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_add"
                    android:visibility="gone"
                    android:layout_below="@+id/textView4"
                    android:layout_alignRight="@+id/spinner4"
                    android:layout_alignEnd="@+id/spinner4" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner4"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:text="@string/Symptom_5" />

                <Spinner
                    android:id="@+id/spinner5"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    android:entries="@array/array_values" />


            </RelativeLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:layout_marginTop="20dp"
                android:text="@string/Predict"
                android:textColor="#000000"
                android:translationX="110dp"
                android:translationY="0dp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button"
                android:layout_marginTop="20dp"
                android:hint="@string/Prognosis"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

        </RelativeLayout>
